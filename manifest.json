{
    "name": "FlyingTarta tools",
    "version": "0.1.1",
    "description": "Add dependency to a mod in steam workshop easily with an .html preset generated with arma 3 launcher",
    "manifest_version": 3,
    "author": "FlyingTarta",
    "permissions": [
        "tab"
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Flying Tarta Tools"
    },
    "content_scripts": [
        {
          "matches": ["https://steamcommunity.com/*", "file:///*"],
          "js": ["contentScript.js"]
        }
      ],
    "icons":{}

}

